{
    "endOfLine": "lf",
    "printWidth": 120,
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "useTabs": false,
                "trailingComma": "none",
                "proseWrap": "never"
            }
        },
        {
            "files": ["*.css", "*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
