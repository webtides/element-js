{
	"name": "@webtides/element-js",
	"version": "1.0.0-alpha.4",
	"module": "index.js",
	"main": "index.js",
	"type": "module",
	"files": [
		"/dist",
		"/src",
		"index.js"
	],
	"exports": {
		".": {
			"browser": "./index.js",
			"import": "./index.js",
			"default": "./index.js"
		},
		"./src/*": "./src/*.js",
		"./src/util/*": "./src/util/*.js",
		"./src/dom-parts/*": "./src/dom-parts/*.js"
	},
	"repository": "https://github.com/webtides/element-js.git",
	"author": "@webtides",
	"license": "MIT",
	"keywords": [
		"web components",
		"web component",
		"components",
		"component",
		"custom elements",
		"elements",
		"element",
		"element-js",
		"shadow-dom"
	],
	"dependencies": {},
	"devDependencies": {
		"@babel/eslint-parser": "^7.18.9",
		"@open-wc/testing": "^3.1.6",
		"@web/dev-server": "^0.1.30",
		"@web/test-runner": "^0.14.0",
		"babel-eslint": "^10.1.0",
		"babel-plugin-module-resolver": "^5.0.0",
		"deepmerge": "^4.2.2",
		"eslint": "8.22.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1"
	},
	"lint-staged": {
		"*.{js,json}": [
			"prettier --write",
			"git add"
		]
	},
	"scripts": {
		"lint": "eslint index.js 'src/**/*.js'",
		"test": "web-test-runner test/**/*.test.{html,js} --node-resolve",
		"test:coverage": "web-test-runner test/**/*.test.{html,js} --node-resolve --coverage",
		"test:watch": "web-test-runner test/**/*.test.{html,js} --node-resolve --watch",
		"start": "web-dev-server --config web-dev-server.config.mjs"
	}
}
