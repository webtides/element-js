{
	"root": true,
	"extends": ["plugin:prettier/recommended", "plugin:import/recommended"],
	"parser": "babel-eslint",
	"rules": {
		"prettier/prettier": ["error", { "semi": true }],
		"import/extensions": ["error", "always"]
	},
	"globals": {
		"document": true,
		"window": true,
		"customElements": true,
		"HTMLElement": true,
		"requestAnimationFrame": true
	},
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true
	}
}
